<div class = "container">

  <h1>管理者：会員一覧</h1>

  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>会員名</th>
        <th>ニックネーム</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.name %>
            <% end %>
          </td>
          <td><%= customer.nickname %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!--ページネーション-->
  <%= paginate @customers %>
</div>



