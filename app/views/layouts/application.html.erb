<!DOCTYPE html>
<html>
  <head>
    <title>BabyCare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ffd700">
      <div class="container">

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <div class="d-flex flex-row bd-highlight mb-3">
          <!--ロゴの表示-->
           <div class="navbar-brand p-3 float-left" href="/">
             <%= link_to root_path do %>
               <%= image_tag('baby2.png') %>
             <% end %>
           </div>
          </div>
      <ul class="navbar-nav ml-auto ">
        <!--会員側のヘッダー-->
        <% if customer_signed_in? %>
          <div class="mr-5 mt-3">
            <p>
              ようこそ<br><%= current_customer.name %>さん!
            </p>
          </div>
          <li class="nav-item ">
            <!--ログインしている会員のページに遷移-->
            <%= link_to customer_path(current_customer.id),class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
              <li>
                <span class="fa-li">
                  <i class="far fa-smile"></i>
                </span>
                マイページ
              </li>
            </ul>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to tweets_path,class: 'nav-link text-secondary' do %>
             <ul class="fa-ul">
              <li>
                <span class="fa-li">
                  <i class="fas fa-baby-carriage"></i>
                </span>
                つぶやき
              </li>
            </ul>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to babyfoods_path,class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
              <li>
                <span class="fa-li">
                  <i class="fas fa-utensils"></i>
                </span>
                離乳食
              </li>
            </ul>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-secondary' do %>
             <ul class="fa-ul">
              <li>
                <span class="fa-li">
                  <i class="fas fa-sign-out-alt"></i>
                </span>
                ログアウト
              </li>
            </ul>
            <% end %>
          </li>
        <!--管理者側のヘッダー-->
        <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to admin_customers_path,class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
              <li>
                <span class="fa-li">
                  <i class="fas fa-users"></i>
                </span>
                会員一覧
              </li>
            </ul>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_tweets_path,class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
              <li>
                <span class="fa-li">
                  <i class="fas fa-baby-carriage"></i>
                </span>
                つぶやき一覧
              </li>
            </ul>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_babyfoods_path,class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
              <li>
                <span class="fa-li">
                  <i class="fas fa-utensils"></i>
                </span>
                離乳食一覧
              </li>
            </ul>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
                <li>
                  <span class="fa-li">
                    <i class="fas fa-sign-out-alt"></i>
                  </span>
                  ログアウト
                </li>
              </ul>
            <% end %>
          </li>
        <% else %>
        <!--会員側にも管理者側にもログインしていない時のヘッダー-->
          <li class="nav-item">
            <%= link_to new_customer_registration_path,class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
                <li>
                  <span class="fa-li">
                    <i class="fas fa-user-plus"></i>
                  </span>
                  新規登録
                </li>
              </ul>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_customer_session_path,class: 'nav-link text-secondary' do %>
              <ul class="fa-ul">
                <li>
                  <span class="fa-li">
                    <i class="fas fa-sign-in-alt"></i>
                  </span>
                  ログイン
                </li>
              </ul>
            <% end %>
          </li>

        <% end %>
        </ul>
        </div>
      </div>
    </nav>
  </header>

　<body style="background-color:#fffff0">
    <%= yield %>
  </body>
</html>
