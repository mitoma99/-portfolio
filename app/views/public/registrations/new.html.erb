<div class="container">
  <div class="row py-2">
    <div class="col">
　　　<h2>新規登録</h2>
　　</div>
　</div>
　<div class="row">
    <div class="col">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group row" >
          <%= f.label :名前, class: "col-md-3" %>
          <%= f.text_field :name, autofocus: true, class:' form-control customer-name col-md-3 ml-3' %>
        </div>

        <div class="form-group row" >
          <%= f.label :ニックネーム, class: "col-md-3" %>
          <%= f.text_field :nickname, autofocus: true, class:' form-control customer-name col-md-3 ml-3' %>
        </div>

        <div class="form-group row" >
          <%= f.label :メールアドレス,class: "col-md-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:' form-control customer-last_name col-md-3 ml-3' %>
        </div>

        <div class="form-group row" >
          <%= f.label :パスワード（6文字以上）,class: "col-md-4" %>
          <%= f.password_field :password, autocomplete: "new-password", class:' form-control customer-last_name col-md-3 ml-3' %>
        </div>

        <div class="form-group row" >
          <%= f.label :パスワード（確認用）,class: "col-md-4" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:' form-control customer-last_name col-md-3 ml-3' %>
        </div>

        <div class="action text-center sml-7">
          <%= f.submit "新規登録",class: "btn btn-lg btn-warning mt-4 mb-3" %>
        </div>
       <% end %>
       <h5 class="font-weight-bold">既に登録済みの方</h5>
       <div>
         <%= link_to new_customer_session_path do %>
           <h6>こちら<% end %>からログインを行ってください。</h6>
   </div>
  </div>
</div>