<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'public/customers/info', customer: current_customer %>
    </div>
    <div class="col-9">
      <h1>離乳食</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>料理名</th>
            <th>タグ</th>
          </tr>
        </thead>
        <tbody>
          <% @babyfoods.each do |babyfood| %>
            <tr>
              <td><%= image_tag babyfood.get_image(50,50) %></td>
              <td>
              <%= link_to babyfood_path(babyfood.id) do %>
                <%= babyfood.title %>
              <% end %>
              </td>
              <td><%= babyfood.tag.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
