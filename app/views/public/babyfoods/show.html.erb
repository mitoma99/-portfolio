<div class="container">
  <h1><%= @babyfood.title %></h1>
  <div class="row">
    <div class="col-6">
      <td><%= image_tag @babyfood.get_image(250,250) %></td><br>
      <td><%= @babyfood.point %></td>
    </div>
    <div class="col-6">
      <tr>
        <th>
          レシピ投稿：
          <%= link_to customer_path(@babyfood.customer.id) do %>
            <td><%= @babyfood.customer.nickname %></td>
          <% end %>
          さん
        </th>
      </tr><br>
      <tr>
        <th>【材料】</th><br>
        <td><%=safe_join(@babyfood.food.split("\n"),tag(:br))%></td><!--投稿したままにスペースと改行をする-->
      </tr><br>
      <tr>
        <th>【作り方】</th><br>

        <td><%=safe_join(@babyfood.making.split("\n"),tag(:br))%></td><!--投稿したままにスペースと改行をする-->
      </tr>
    </div>
  </div>

</div>



