<div class="container">
  <h3><%= @babyfood.title %></h3>
  <% if @babyfood.customer == current_customer %>
    <div><%= link_to "編集する", edit_babyfood_path(@babyfood),class: "btn　mt-4 mb-3" %></div>
    <td>
      <%= link_to babyfood_path(@babyfood), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </td>
  <% end %>
  <div class="row">
    <div class="col-5 mt-4 mb-3">
      <td><%= image_tag @babyfood.get_image(250,250) %></td>

      <div class="card border-warning mb-3 mt-4 mb-3" style="max-width: 18rem;">
        <p class="card-text py-3 px-3">
          <tr>
            <th>【材料】</th><br>
            <td><%=safe_join(@babyfood.food.split("\n"),tag(:br))%></td><!--投稿したままにスペースと改行をする-->
          </tr>
        </p>
     </div>

    </div>
    <div class="col-7">
      <div class="card border-warning mb-3 mt-4 mb-3" style="max-width: 30rem;">
        <p class="card-text py-3 px-3">
          <tr>
            <tr>
              <td><%= @babyfood.tag.name %></td><br>
              <td>レシピ投稿：
                <%= link_to customer_path(@babyfood.customer.id) do %>
              <td><%= @babyfood.customer.nickname %></td>
              <% end %>
              さん</td>
            </tr><br>
            <th>【ポイント】</th><br>
            <td><%=safe_join(@babyfood.point.split("\n"),tag(:br))%></td><!--投稿したままにスペースと改行をする-->
          </tr>
        </p>
     </div>
     <div class="card border-warning mb-3 mt-4 mb-3" style="max-width: 30rem;">
        <p class="card-text py-3 px-3">
          <tr>
            <th>【作り方】</th><br>
            <td><%=safe_join(@babyfood.making.split("\n"),tag(:br))%></td><!--投稿したままにスペースと改行をする-->
          </tr>
        </p>
     </div>
    </div>
  </div>

</div>



