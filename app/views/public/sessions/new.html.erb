<div class="container">
  <div class="row py-2">
    <div class="col">
　　　<h2>ログイン</h2>
　　</div>
　</div>
　<div class="row">
    <div class="col">

　　　　<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  　　　　　　　<div class="form-group row" >
    　　　　　　<%= f.label :メールアドレス,class: "col-md-4" %>
    　　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email", class:' form-control customer-last_name col-md-3 ml-3' %>
  　　　　　　</div>

  　　　　　　<div class="form-group row" >
    　　　　　　<%= f.label :パスワード（6文字以上）,class: "col-md-4" %>
    　　　　　　<%= f.password_field :password, autocomplete: "new-password", class:' form-control customer-last_name col-md-3 ml-3' %>
  　　　　　　</div>

  　　　　　　<div class="actions ml-5">
          　<%= f.submit "ログイン", class: "btn btn-sm btn-primary mt-4 mb-3" %>
        　</div>
      　<% end %>

      <h5 class="font-weight-bold bg-light">会員登録がお済みでない方</h5>
        <div class="field mt-3"><%= link_to new_customer_registration_path do %>
          <h5>こちら<% end %> から新規登録を行ってください。</h5>
        </div>
    </div>
  </div>
</div>