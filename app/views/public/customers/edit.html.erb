<div class="container">

  <div class="row">
    <h1><%= @customer.name %>さんのページ編集</h1>
  </div>

  <p class="text-danger">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件が空欄または<br>
      名前・ニックネームが1文字以下・20文字以上、<br>
      自己紹介が30文字以上になっています
    <% end %>
  </p>

  <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>

     <div class="form-group row">
         <%= f.label :プロフィール画像, class: "col-md-3" %>
         <%= f.file_field :image, accept: "image/*" %>
     </div>

  　　 <div class="form-group row" >
  　　   <%= f.label :名前, class: "col-md-3" %>
       <%= f.text_field :name, autofocus: true, class:' form-control customer-name col-md-3 ml-3' %>
     </div>

     <div class="form-group row" >
       <%= f.label :ニックネーム, class: "col-md-3" %>
       <%= f.text_field :nickname, autofocus: true, class:' form-control customer-name col-md-3 ml-3' %>
     </div>

     <div class="form-group row" >
       <%= f.label :自己紹介, class: "col-md-3" %>
       <%= f.text_area :introduction, autofocus: true, class:' form-control customer-name col-md-3 ml-3' %>
     </div>

     <div class="form-group row" >
       <%= f.label :メールアドレス,class: "col-md-4" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class:' form-control customer-last_name col-md-3 ml-3' %>
     </div>

     <div class="actions　ml-7">
       <%= f.submit "編集を保存する",class: "btn btn-lg btn-success mt-4 mb-3" %>
     </div>
  <% end %>
