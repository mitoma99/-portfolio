
<td><%= image_tag customer.get_image(200,200) %></td>
<table class="table table-striped table-warning">
  <% if customer == current_customer %>
    <tr>
      <th>名前</th>
      <td><%= customer.name %></td>
    </tr>
  <% end %>
  <tr>
    <th>ニックネーム</th>
    <td><%= customer.nickname %></td>
    </tr>
  <tr>
    <th>自己紹介</th>
    <td><%=safe_join(customer.introduction.split("\n"),tag(:br))%></td>
  </tr>
  <% if customer == current_customer %>
    <tr>
      <th>メールアドレス</th>
      <td><%= customer.email %></td>
    </tr>
  <% end %>
  <tr>
    <th></th>
    <td>
      <% if customer == current_customer %>
        <%= link_to "編集する", edit_customer_path(customer),class: "btn" %>
      <% end %>
    </td>
  </tr>
</table>

<div><%= link_to "つぶやく", new_tweet_path,class: "btn" %></div>

