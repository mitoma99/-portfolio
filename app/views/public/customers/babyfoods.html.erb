<div class="container">

  <h1><%= @customer.name %>さんのページ</h1>

  <div class="row">
    <div class="col-4">
      <%= render 'info', customer: @customer %>
    </div>

    <div class="col-7">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>料理名</th>
            <th>タグ</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.babyfoods.each do |babyfood| %>
            <tr>
              <td><%= image_tag babyfood.get_image(50,50) %></td>
              <td>
              <%= link_to babyfood_path(babyfood.id) do %>
                <%= babyfood.title %>
              <% end %>
              </td>
              <td><%= babyfood.tag.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>